{
    "manifest_version": 3,
    "name": "My Promptbook",
    "version": "1.0",
    "description": "A Chrome extension to inject prompt templates on chatgpt.com.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.chatgpt.com/*"
    ],
    "action": {
        "default_popup": "../FRONTEND/HTML/popup.html"
    },
    "background": {
        "service_worker": "./FRONTEND/JS/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "./FRONTEND/JS/content.js"
            ]
        }
    ]
}